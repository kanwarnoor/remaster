generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgres"
}

enum Visibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique()
  password  String    
  premium   Boolean?  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  username  String    @unique 
  albums Album[]
  tracks Track[]
  invite Invite? @relation("InviteClaimedBy")
}

model Album {
  id           String   @id @default(uuid())
  name        String
  artist      String?
  description String?
  image       String?
  tracks      Track[]
  user        User    @relation(fields: [userId], references: [id])
  userId      String
  visibility  Visibility @default(PRIVATE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Track {
  id         String   @id @default(uuid())
  artist     String?
  audio      String
  duration   Float?
  image      String?
  name       String?
  size       Int?
  user       User @relation(fields: [userId], references: [id])
  userId     String
  album      Album  @relation(fields: [albumId], references: [id])
  albumId    String
  visibility Visibility @default(PRIVATE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Invite{
  id String @id @default(uuid())
  code String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  claimed Boolean @default(false)
  userId  String? @unique
  user User? @relation("InviteClaimedBy" , fields: [userId], references: [id])
}